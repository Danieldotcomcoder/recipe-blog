<h2>Add Food</h2>
<%= form_with model: @food do |form| %>
<div>
  <%= form.label :name %><br>
  <%= form.text_field :name,class:"box-border" %>
</div>

<div>
  <%= form.label :measurement_unit %><br>
  <%= form.text_field :measurementUnit, class: "box-border" %>
</div>

<div>
  <%= form.label :Price %><br>
  <%= form.number_field :Price,class: "box-border" %>
</div>

<div class="actions">
  <%= form.submit "Add", class: 'btn btn-primary' %>
</div>
<% end %>
