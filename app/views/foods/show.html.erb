<%= link_to "Back", foods_url, :class => "btn btn-primary mx-2 my-2"%>
<div class="card">
  <h5 class="card-header"> <%= @food.name %></h5>
  <div class="card-body">
    <h5 class="card-title">Measurement Unit: <%= @food.measurementUnit %></h5>
    <p class="card-text">Price: $<%= @food.Price %></p>
    <%= button_to "Delete Food", food_path(@food.id), method: :delete, data: {confirm: "Are you sure"}, :class => "btn btn-danger del"%>
  </div>
</div>
